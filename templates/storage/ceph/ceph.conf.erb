[global]
fsid = 91e2267a-e49c-43a6-9901-a5c72cf5ce22
mon_initial_members = ceph-02,ceph-04,ceph-06
mon_host = 10.108.32.33,10.108.32.35,10.108.32.37
auth_cluster_required = cephx
auth_service_required = cephx
auth_client_required = cephx
filestore_xattr_use_omap = true
public_network = 10.108.32.0/24
cluster_network = 10.108.31.128/25

osd crush update on start = false

<% if @compute_node -%>
[client]
    rbd cache = true
    rbd cache writethrough until flush = true
    admin socket = /var/run/ceph/guests/$cluster-$type.$id.$pid.$cctid.asok
    log file = /var/log/qemu/qemu-guest-$pid.log
    rbd concurrent management ops = 20
<% end -%>

[client.cinder]
    keyring = /etc/ceph/ceph.client.cinder.keyring

[client.cinder-backup]
    keyring = /etc/ceph/ceph.client.cinder-backup.keyring

[client.glance]
    keyring = /etc/ceph/ceph.client.glance.keyring

